<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAdminGui.MainPage">

    <ScrollView>
        <Grid RowDefinitions="*, 5*"
              BackgroundColor="White">
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,*,*">
                <Button x:Name="btnAfdelinger"
                        Text="Afdelinger"
                        Grid.Column="0"
                        Style="{StaticResource MenuKnap}"
                        Clicked="Afdelinger_Clicked" />
                <Button x:Name="btnMedarbejdere"
                        Text="Medarbejdere"
                        Grid.Column="1"
                        Style="{StaticResource MenuKnap}"
                        Clicked="Medarbejdere_Clicked" />
                <Button x:Name="btnSager"
                        Text="Sager"
                        Grid.Column="2"
                        Style="{StaticResource MenuKnap}"
                        Clicked="Sager_Clicked" />
            </Grid>
            <Grid Grid.Row="1"
                  ColumnDefinitions="*,*,*"
                  RowDefinitions="*,*,*,*">
                
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>
